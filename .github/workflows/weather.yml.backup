name: Update Weather Data
permissions:
  contents: write

on:
  schedule:
    - cron: '0 7,14 * * *'  # Runs at 7:00 AM and 2:00 PM UTC daily
  workflow_dispatch:  # Allows manual trigger

jobs:
  update-all-weather:
    runs-on: ubuntu-latest
    timeout-minutes: 45  # Give it plenty of time
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Get full history for better merging

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          pip install -r requirements.txt
          echo "‚úÖ Dependencies installed"

      - name: Update ALL weather data (single run)
        run: |
          echo "üîÑ Starting weather update for ALL beaches..."
          python ./weather_updater.py --once --data-dir .
          echo "‚úÖ Weather update completed"
        timeout-minutes: 30

      - name: Verify cache was updated
        run: |
          echo "=== Verifying weather_cache.json ==="
          if [ ! -f "weather_cache.json" ]; then
            echo "‚ùå ERROR: weather_cache.json was not created!"
            exit 1
          fi
          
          # Check file size and content
          FILE_SIZE=$(wc -c < weather_cache.json)
          echo "File size: ${FILE_SIZE} bytes"
          
          if [ $FILE_SIZE -lt 100 ]; then
            echo "‚ö†Ô∏è  WARNING: Cache file seems very small"
          fi
          
          # Count entries (rough estimate)
          ENTRY_COUNT=$(grep -c '"beach_name"' weather_cache.json 2>/dev/null || echo "0")
          echo "Approximate beach entries: ${ENTRY_COUNT}"
          
          # Show last update time
          LAST_UPDATED=$(grep -o '"last_updated":"[^"]*"' weather_cache.json | tail -1 | cut -d'"' -f4)
          if [ -n "$LAST_UPDATED" ]; then
            echo "Most recent update: $LAST_UPDATED"
          fi

      - name: Commit and push updated cache
        run: |
          echo "üîÑ Preparing to commit updated weather cache..."
          
          # Configure git
          git config user.email "action@github.com"
          git config user.name "GitHub Action"
          
          # Check if weather_cache.json actually changed
          if git diff --quiet weather_cache.json; then
            echo "üü° No changes detected in weather cache - nothing to commit"
            exit 0
          fi
          
          echo "üü¢ Changes detected in weather_cache.json"
          
          # Pull latest changes to avoid conflicts
          echo "üì• Pulling latest changes from main..."
          git pull origin main --rebase --autostash || {
            echo "‚ö†Ô∏è  Pull failed, trying merge strategy..."
            git pull origin main --no-rebase
          }
          
          # Stage only the weather cache file
          git add weather_cache.json
          
          # Create commit
          COMMIT_MSG="Update weather cache - $(date -u +'%Y-%m-%d %H:%M UTC')"
          git commit -m "$COMMIT_MSG"
          
          # Push with retry logic
          echo "üì§ Pushing changes to main..."
          MAX_RETRIES=3
          for i in $(seq 1 $MAX_RETRIES); do
            if git push origin main; then
              echo "‚úÖ Successfully pushed updated weather cache"
              exit 0
            else
              echo "üîÑ Push attempt $i/$MAX_RETRIES failed"
              if [ $i -lt $MAX_RETRIES ]; then
                echo "‚è≥ Waiting 10 seconds before retry..."
                sleep 10
                echo "üì• Pulling latest before retry..."
                git pull origin main --rebase --autostash
              fi
            fi
          done
          
          echo "‚ùå Failed to push after $MAX_RETRIES attempts"
          exit 1
